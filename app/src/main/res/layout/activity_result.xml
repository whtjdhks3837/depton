<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="depromeet.depton.nunayun.presentation.result.ResultViewModel"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_result_upper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/result_heart"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d8d8d8"
                android:alpha="0.3"
                app:layout_constraintTop_toBottomOf="@id/image_result_upper"/>

            <TextView
                android:id="@+id/text_result_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="#454545"
                android:fontFamily="@font/basefont"
                android:textStyle="italic"
                android:gravity="center"
                android:text="두 사람의 취향 궁합도는\n60%입니다."
                android:layout_marginBottom="35dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/image_result_upper"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_result_me"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/image_result_upper"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/cancel"/>

            <TextView
                android:id="@+id/text_result_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/basefont"
                android:textStyle="italic"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="@id/image_result_me"
                app:layout_constraintBottom_toBottomOf="@id/image_result_me"
                app:layout_constraintStart_toEndOf="@id/image_result_me"
                android:text="아아아님"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_result_you"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="22dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/image_result_upper"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/cancel"/>

            <TextView
                android:id="@+id/text_result_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/basefont"
                android:textStyle="italic"
                android:textSize="15dp"
                app:layout_constraintTop_toTopOf="@id/image_result_you"
                app:layout_constraintBottom_toBottomOf="@id/image_result_you"
                app:layout_constraintEnd_toStartOf="@id/image_result_you"
                android:text="아아아님"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/link"
                app:layout_constraintTop_toTopOf="@id/text_result_you"
                app:layout_constraintBottom_toBottomOf="@id/text_result_you"
                app:layout_constraintStart_toEndOf="@id/text_result_me"
                app:layout_constraintEnd_toStartOf="@id/text_result_you"/>

            <!--fixme-->
            <LinearLayout
                android:id="@+id/linear_result_matching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/image_result_me"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>